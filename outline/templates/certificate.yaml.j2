{{ if .Values.cert.requestCertificate }}
---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: acme-cert-outline
spec:
  commonName: "{{ .Values.extUrl }}"
  dnsNames:
    - "{{ .Values.extUrl }}"
  issuerRef:
    kind: "{{ .Values.cert.kind }}"
    name: "{{ .Values.cert.name }}"
  secretName: "{{ .Values.cert.secretName }}"
...
{{ end }}