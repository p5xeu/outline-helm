{{ if .Values.createRoute }}
---
kind: Route
apiVersion: route.openshift.io/v1
metadata:
  name: outline
spec:
  host: "{{ .Values.extUrl }}"
  to:
    kind: Service
    name: outline
    weight: 100
  port:
    targetPort: {{ .Values.outline.servicePort }}
  tls:
    termination: edge
    insecureEdgeTerminationPolicy: Redirect
  wildcardPolicy: None
...
{{ end }}